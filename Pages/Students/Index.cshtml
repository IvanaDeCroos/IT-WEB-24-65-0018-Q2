@page
@model StudentManagementSystem.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Student</a>
</p>

<div class="mb-3">
    <form method="get">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search by student name or city..."
                   name="SearchString" value="@Model.CurrentFilter" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
                @if (!string.IsNullOrEmpty(Model.CurrentFilter))
                {
                    <a asp-page="./Index" class="btn btn-outline-danger">Clear</a>
                }
            </div>
        </div>
    </form>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Student ID</th>
            <th>Name</th>
            <th>City</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.Name</td>
                <td>@student.City</td>
                <td>@student.Course.Name</td>
                <td>
                    <div class="btn-group">
                    <a asp-page="./Edit" asp-route-id="@student.StudentId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@student.StudentId" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@student.StudentId" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>