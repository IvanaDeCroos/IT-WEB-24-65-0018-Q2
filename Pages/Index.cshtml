@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Student Management System</h1>
    <p>Welcome to the Student Management System. Use the links below to navigate.</p>
</div>

<div class="row mt-4">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Student Management</h5>
            </div>
            <div class="card-body">
                <p>Manage student information, including adding new students and viewing existing records.</p>
                <div class="d-flex justify-content-between">
                    <a class="btn btn-outline-primary" asp-page="/Students/Index">View Students</a>
                    <a class="btn btn-outline-success" asp-page="/Students/Create">Add Student</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Course Management</h5>
            </div>
            <div class="card-body">
                <p>Manage course information, including adding new courses and viewing existing courses.</p>
                <div class="d-flex justify-content-between">
                    <a class="btn btn-outline-primary" asp-page="/Courses/Index">View Courses</a>
                    <a class="btn btn-outline-success" asp-page="/Courses/Create">Add Course</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">System Overview</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-body text-center">
                                <h3 class="display-4">@Model.StudentCount</h3>
                                <p class="lead">Total Students</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-body text-center">
                                <h3 class="display-4">@Model.CourseCount</h3>
                                <p class="lead">Total Courses</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>