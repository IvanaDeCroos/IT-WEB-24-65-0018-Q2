@page "{id:int}"
@model StudentManagementSystem.Pages.Courses.DetailsModel
@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Course Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Course ID</dt>
                    <dd class="col-sm-8">@Model.Course.CourseId</dd>

                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Course.Name</dd>

                    <dt class="col-sm-4">Lecturer</dt>
                    <dd class="col-sm-8">@Model.Course.LecturerName</dd>
                </dl>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <a asp-page="./Edit" asp-route-id="@Model.Course.CourseId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Enrolled Students (@Model.Course.Students.Count)</h5>
            </div>
            @if (Model.Course.Students.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var student in Model.Course.Students)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @student.Name
                            <span class="badge bg-primary rounded-pill">@student.City</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="card-body">
                    <p class="text-muted text-center">No students enrolled in this course.</p>
                </div>
            }
        </div>
    </div>
</div>