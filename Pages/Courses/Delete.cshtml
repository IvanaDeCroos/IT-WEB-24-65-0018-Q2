@page "{id:int}"
@model StudentManagementSystem.Pages.Courses.DeleteModel
@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this course?</h3>
    <p>This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Course Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Course ID</dt>
                    <dd class="col-sm-8">@Model.Course.CourseId</dd>

                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Course.Name</dd>

                    <dt class="col-sm-4">Lecturer</dt>
                    <dd class="col-sm-8">@Model.Course.LecturerName</dd>

                    <dt class="col-sm-4">Enrolled Students</dt>
                    <dd class="col-sm-8">@Model.Course.Students.Count</dd>
                </dl>
            </div>
            <div class="card-footer">
                <form method="post">
                    <input type="hidden" asp-for="Course.CourseId" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>